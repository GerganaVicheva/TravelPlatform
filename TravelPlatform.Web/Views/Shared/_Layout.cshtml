@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TravelPlatform.Web</title>
	<link rel="icon" type="image/png" href="~/images/travel.png" />

	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TravelPlatform.Web.styles.css" asp-append-version="true" />

	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">

	@await RenderSectionAsync("Styles", required: false)
</head>
<body class="min-vh-100">
	<header style="margin-bottom: 0px !important;">
		<nav class="d-flex justify-content-between align-items-center">
			<div class="logo d-flex align-items-center">
				<img src="~/images/travel.png" alt="logo" class="my-1 mx-2">
				<h2 class="m-0">Wanderly</h2>
			</div>
			<ul class="nav-links mb-0 mx-2">
				<li class="ms-0"><a asp-controller="Home" asp-action="Index" asp-fragment="hero">Home</a></li>
				<li><a href="/#about">About us</a></li>
				<li><a href="/#team">Team</a></li>
				<li><a asp-controller="Home" asp-action="Contact">Contacts</a></li>
				@if (User.Identity.IsAuthenticated)
				{
					<li class="dropdown">
						<button class="dropbtn">Explore</button>
						<div class="dropdown-content">
							<a asp-controller="Suggested" asp-action="Profiles">View Porfiles</a>
							<a asp-controller="Suggested" asp-action="Posts">View Posts</a>
						</div>
					</li>
				}
			</ul>
			@* <div class="search-bar me-2 d-flex align-items-center"> *@
			@*     <input type="text" placeholder="Search..." class="rounded-2"> *@
			@*     <button class="ms-2"> *@
			@*         <img src="~/images/search.png" alt="search-icon"> *@
			@*     </button> *@
			@* </div> *@
			<partial name="_LoginPartial" />
		</nav>
	</header>
	@* <div class="container"> *@
	<main role="main" class="pb-0 mb-0 position-relative">
		@RenderBody()
	</main>
	@* </div> *@

	<footer class="footer">
		<div class="container-fluid">
			<div class="d-flex flex-row justify-content-evenly">

				<!-- Brand Section -->
				<div class="d-flex flex-column align-items-start w-25 grow-1">
					<div class="d-flex align-items-center mb-1">
						<div class="footer-brand-logo">
							<img src="/images/travel.png" alt="Logo" />
						</div>
						<span class="footer-brand-name">Wanderly</span>
					</div>
					<p class="footer-txt p-0">
						Creating beautiful, modern web experiences with attention to detail and user-centered design.
					</p>
					<div class="d-flex">
						<a href="#" class="footer-social me-3">
							<i class="bi bi-facebook"></i>
						</a>
						<a href="#" class="footer-social me-3">
							<i class="bi bi-twitter"></i>
						</a>
						<a href="#" class="footer-social me-3">
							<i class="bi bi-instagram"></i>
						</a>
						<a href="#" class="footer-social">
							<i class="bi bi-linkedin"></i>
						</a>
					</div>
				</div>

				<!-- Quick Links -->
				<div class="d-flex flex-column align-items-start me-6 grow-1">
					<h3 class="footer-heading">Quick Links</h3>
					<ul class="list-unstyled">
						<li><a href="#" class="footer-link">Home</a></li>
						<li><a href="#" class="footer-link">About</a></li>
						<li><a href="#" class="footer-link">Services</a></li>
						<li><a href="#" class="footer-link">Portfolio</a></li>
						<li><a href="#" class="footer-link">Blog</a></li>
					</ul>
				</div>

				<!-- Services -->
				<div class="d-flex flex-column align-items-start me-6 grow-1">
					<h3 class="footer-heading">Services</h3>
					<ul class="list-unstyled">
						<li><a href="#" class="footer-link">Web Design</a></li>
						<li><a href="#" class="footer-link">Development</a></li>
						<li><a href="#" class="footer-link">SEO</a></li>
						<li><a href="#" class="footer-link">Consulting</a></li>
						<li><a href="#" class="footer-link">Support</a></li>
					</ul>
				</div>

				<!-- Contact Info -->
				<div class="contacts d-flex flex-column align-items-start grow-1">
					<h3 class="footer-heading">Contact</h3>
					<div>
						<div class="d-flex align-items-center p-0 mb-2">
							<i class="bi bi-envelope footer-icon"></i>
							<span class="footer-contact-text">hello@example.com</span>
						</div>
						<div class="d-flex align-items-center mb-2">
							<i class="bi bi-telephone footer-icon"></i>
							<span class="footer-contact-text">+1 (555) 123-4567</span>
						</div>
						<div class="d-flex align-items-center">
							<i class="bi bi-geo-alt footer-icon" style="margin-top: 2px;"></i>
							<span class="footer-contact-text">
								123 Business Ave<br>
								Suite 100<br>
								City, State 12345
							</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Bottom Section -->
			<div class="footer-bottom">
				<div class="d-flex flex-row justify-content-center align-items-center">
					<p class="footer-bottom-text me-2 my-0">
						© 2025 Wanderly. All rights reserved.
					</p>
					<div class="d-flex">
						<a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link footer-bottom-link">
							Privacy Policy</a>
					</div>
				</div>
			</div>

		</div>
	</footer>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/ajax-message.js" asp-append-version="true"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
